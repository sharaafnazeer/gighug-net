@model IEnumerable<GigHub.Models.Gig>
@{
    ViewBag.Title = "Home Page";
}

<ul class="gigs">
    @foreach (var gig in Model)
    {
        <li>

            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")
                </div>
            </div>

            <div class="details">
                <div class="artist">
                    @gig.Artist.UserName
                </div>
                <div class="gerne">
                    @gig.Genre.Name
                </div>
            </div>

        </li>
    }
</ul>